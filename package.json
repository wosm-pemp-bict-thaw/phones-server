{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:client": "cd ../client && ng build --configuration production",
    "copy:client-to-server": "cpy '../client/dist/client/browser/**' dist/client --parents",
    "prod": "NODE_ENV=production node dist/index.js",
    "dev": "nodemon",
    "build:server": "tsc",
    "build:all": "npm run build:client && npm run build:server && npm run copy:client-to-server",
    "lint": "eslint . --ext .ts",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "keywords": [],
  "author": "Kostya Bondaletov",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "axios": "^1.7.7",
    "config": "^3.3.12",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.0.0",
    "jsonschema": "^1.4.1",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/config": "^3.3.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.9.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.7",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "cpy-cli": "^5.0.0",
    "eslint": "^9.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
